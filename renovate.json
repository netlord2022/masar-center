{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":separatePatchReleases",
    ":rebaseStalePrs",
    "github>nuxt/renovate-config-nuxt"
  ],
  "dependencyDashboard": true,
  "labels": ["dependencies"],

  "packageRules": [
    {
      "description": "Auto-merge patch updates",
      "matchUpdateTypes": ["patch"],
      "automerge": true
    },
    {
      "description": "Auto-merge minor updates except core framework",
      "matchUpdateTypes": ["minor"],
      "excludePackagePatterns": ["^nuxt$", "^vue$", "^vue-router$"],
      "automerge": true
    },
    {
      "description": "Group Nuxt ecosystem",
      "matchPackagePatterns": ["^nuxt$", "^@nuxt", "^@vueuse/nuxt"],
      "groupName": "nuxt ecosystem"
    },
    {
      "description": "Group Tailwind stack",
      "matchPackagePatterns": ["^tailwindcss", "^@tailwindcss"],
      "groupName": "tailwind stack"
    },
    {
      "description": "Group linting tools",
      "matchPackagePatterns": ["^eslint", "^@nuxt/eslint"],
      "groupName": "linting"
    },
    {
      "description": "Separate major updates",
      "matchUpdateTypes": ["major"],
      "dependencyDashboardApproval": true
    }
  ],
  "timezone": "UTC"
}
